{% extends "admin/layouts/concept-master/layout.html.twig" %}

{% block content %}
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">Create Test Product</h2>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            {{ knp_menu_render('breadcrumbs', {'template': 'admin/menu/breadcrumb.html.twig'}) }}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
            <div class="section-block">
                <h5 class="section-title">Create Test Product</h5>
                <p>Test Categories with Taxonomy.</p>
            </div>
         
            <div class="form-container">
                {{ form_start(form, { 'attr': {'class': 'form-horizontal '} }) }}
                    {{ form_widget(form._token) }}
                    
                    
                    <div class="form-group">
                        {{ form_label(form.taxons, null, {
                            'label_attr': {'class': 'col-form-label'}
                            }) 
                        }}
                        {{ form_widget(form.taxons, {
                            'attr': {
                                'class': 'form-control'
                            }
                        }) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.name, null, {
                            'label_attr': {'class': 'col-form-label'}
                            }) 
                        }}
                        
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="row">&nbsp;</div>
                    <div class="input-group row">
                        <div class="col-sm-2">
                            {{ form_widget(form.btnSave, {'attr': {'class': 'btn btn-primary', 'id':'btnSave'}}) }}
                        </div>
                        <div class="col-sm-3">
                            {{ form_widget(form.btnApply, {'attr': {'class': 'btn btn-primary', 'id':'btnApply'}}) }}
                        </div>
                        <div class="col-sm-2">
                            {{ form_widget(form.btnCancel, {'attr': {'class': 'btn btn-secondary', 'id':'btnCancel'}}) }}
                        </div>
                    </div>
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>              
    </div>
{% endblock %}
