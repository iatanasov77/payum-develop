{% extends "@VSApplication/layout.html.twig" %}

{% block title %}{{ parent() }} :: List Pages{% endblock %}

{% block content %}
	<div class="container-fluid  dashboard-content">
		<!-- ============================================================== -->
        <!-- breadcrumb -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">Pages</h2>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            {{ knp_menu_render('breadcrumbs', {'template': '@VSApplication/Menu/breadcrumb.html.twig'}) }}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end breadcrumb -->
        <!-- ============================================================== -->
 
	    {% for page in pages %}
	    	<div class="row mb-4">   
    	        <div class="col-lg-12">Page: {{ page.id }} - {{ page.title }}</div>
    	    </div>
    	    <div class="row">   
    	        <div class="col-lg-12">
    	            <section class="panel">
    	                <table class="table table-striped table-advance table-hover">
    	                    <tr>
    	                        <th width="50">ID</th>
    	                        <th>Version</th>
    	                        <th>Action</th>
    	                        <th>Data</th>
    	                    </tr>
    	                    {% for item in versions[page.id] %}
    	                        <tr>
    	                            <td>{{ item.id }}</td>
    	                            <td>{{ item.version }}</td>
    	                            <td>{{ item.action }}</td>
    	                            <td>{{ item.data.title }}</td>
    	                        </tr>
    	                    {% endfor %}
    	                </table>
    	            </section>
    	        </div>
    	    </div>
    	    <div class="row mb-4"><div class="col-lg-12"></div></div>
    	{% endfor %}
	</div>
{% endblock %}
