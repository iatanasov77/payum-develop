{% extends "@VSApplication/layout.html.twig" %}

{# Override Blocs #}
{% block title %}{{ parent() }} :: Blog Posts{% endblock %}
{% block pageTitle %}<i class="icon_genius"></i> Blog Posts{% endblock %}
{% block content %}
    <div class="container-fluid  dashboard-content">
    	<!-- ============================================================== -->
        <!-- pageheader -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">Blog Posts</h2>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            {{ knp_menu_render('breadcrumbs', {'template': '@VSApplication/Menu/breadcrumb.html.twig'}) }}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end pageheader -->
        <!-- ============================================================== -->

		<div class="row mb-4">   
	        <div class="col-lg-12">
	        	<a class="btn btn-primary" href="{{ path('vs_cms_page_categories_create') }}">Create New Page Category</a>
	       	</div>
	    </div>
        <div class="row">
            <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-12 mb-5">
                
                {% if items|length > 0 %}
                    <div class="card">
    	                <div class="card-header">
                            <div class="float-left" style="height:30px; padding-top:10px;">Pages Categories</div>
                        </div>
                        <div class="card-body" style="padding: 0;">
                        
                            <table class="table table-striped table-advance table-hover gtreetable" 
                            		id="tblCategories_GTreeTable"
                            		data-sourceUrl="{{ url('vs_cms_pages_tree_table', {'taxonomyId': taxonomyId}) }}"
                            		data-updateUrl="/bundles/vs-cms/json/update-pages-category-by-taxon/"
                            		data-deleteUrl="/bundles/vs-cms/json/delete-pages-category-by-taxon/"
                            		data-moveUrl="/bundles/vs-cms/json/move-pages-category-by-taxon/"
                            >
                            </table>
                        </div>
                    </div>
                {% else %}
                	No Categories
                    {#
                    {{ alerts.info('sylius.ui.there_are_no_mappers_to_display'|trans) }}
                    #}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block head_styles %}	
	{{ parent() }}
	{{ encore_entry_link_tags( 'pages/pages_categories' ) }}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    {{ encore_entry_script_tags( 'pages/pages_categories' ) }}
{% endblock %}
