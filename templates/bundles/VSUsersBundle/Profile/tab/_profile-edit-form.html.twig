<section class="panel">                                          
    <div class="panel-body bio-graph-info">
        <h1> Profile Info</h1>

        {% block profile_row %}
            {# {{ block('form_widget_simple') }} #}
        {% endblock profile_row %}
        
        
        {{ form_start(form, { 'attr': {'class': 'form-horizontal '} }) }}
        	<div class="row">
        		{% if installedBundles.LiipImagineBundle is defined %}
        			<img src="{{ asset('uploads/profile_pictures/' ~ user.info.profilePictureFilename) | imagine_filter('profile_form_thumb') }}" />
        		{% else %}
        			<img src="{{ asset('uploads/profile_pictures/' ~ user.info.profilePictureFilename) }}" />
        		{% endif %}
        	</div>
        	<div class="form-group">
        		{{ form_label(form.profilePicture, null, {
                    'label_attr': {'class': 'col-form-label'}
                    }) 
                }}
                {{ form_widget(form.profilePicture, {'attr': {'class': 'form-control' }}) }}
            </div>
            <div class="form-group">
            	{{ form_label(form.firstName, null, {
                    'label_attr': {'class': 'col-form-label'}
                    }) 
                }}
                {{ form_widget(form.firstName, {'attr': {'class': 'form-control' }}) }}
            </div>
            <div class="form-group">
            	{{ form_label(form.lastName, null, {
                    'label_attr': {'class': 'col-form-label'}
                    }) 
                }}
                {{ form_widget(form.lastName, {'attr': {'class': 'form-control' }}) }}
            </div>
            
            <div class="row">&nbsp;</div>
            <div class="input-group row">
                <div class="col-sm-1">
                    {{ form_widget(form.btnSave, {'attr': {'class': 'btn btn-primary', 'id':'btnSave'}}) }}
                </div>
                {#
                <div class="col-sm-1">
                    {{ form_widget(form.btnApply, {'attr': {'class': 'btn btn-primary', 'id':'btnApply'}}) }}
                </div>
                #}
                {{ form_widget(form.btnCancel, {'attr': {'class': 'btn btn-default', 'id':'btnCancel'}}) }}
            </div>
        {{ form_end(form, {'render_rest': false}) }}
    </div>
</section>
