{
    "name": "symfony/skeleton",
    "type": "project",
    "license": "MIT",
    "description": "A minimal Symfony project recommended to create bare bones applications",
    "require": {
        "php": "^7.1.3",
        
        "symfony/console": "^4.2",
        "symfony/dotenv": "^4.2",
        "symfony/form": "^4.2",
        "symfony/framework-bundle": "^4.2",
        "symfony/orm-pack": "*",
        "symfony/security-csrf": "^4.2",
        "symfony/templating": "^4.2",
        "symfony/translation": "^4.2",
        "symfony/twig-bundle": "^4.2",
        "symfony/validator": "^4.2",
        "symfony/webpack-encore-bundle": "^1.6",
        "symfony/yaml": "^4.2",
        "twig/extensions": "^1.5",
        
		"iatanasov77/vs-core-bundle": "dev-develop",
		"iatanasov77/vs-users-bundle": "dev-develop",
       	"iatanasov77/vs-cms-bundle": "dev-develop",
       	"iatanasov77/vs-payment-bundle": "dev-develop"
    },
    "require-dev": {
    	"symfony/debug-bundle": "^4.2",
        "symfony/maker-bundle": "^1.13",
        "symplify/changelog-linker": "^7.3@dev"
    },
	"repositories": [
		{
            "type": "git",
            "url": "https://github.com/iatanasov77/vs-core-bundle.git"
        },
		{
            "type": "git",
            "url": "https://github.com/iatanasov77/vs-users-bundle.git"
        },
        {
            "type": "git",
            "url": "https://github.com/iatanasov77/vs-cms-bundle.git"
        },
        {
            "type": "git",
            "url": "https://github.com/iatanasov77/vs-payment-bundle.git"
        }
	],
    "config": {
        "process-timeout":      600,
        "preferred-install":    "dist",
        "github-protocols":     ["https"]
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "IA\\ApplicationCoreBundle\\": "lib/IA/ApplicationCoreBundle/",
            "IA\\CmsBundle\\": "lib/IA/CmsBundle/",
            "IA\\PaymentBundle\\": "lib/IA/PaymentBundle/",
            "IA\\UsersBundle\\": "lib/IA/UsersBundle/",
            "Payum\\Stripe\\": "lib/Payum/Stripe/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
         	"cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "minimum-stability" : "dev"
}
